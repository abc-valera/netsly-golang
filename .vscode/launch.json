  "version": "0.2.0",
  "configurations": [
    {
      "name": "json-rest-api Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd",
      "args": ["-entrypoint", "json-rest-api"],
      "envFile": "${workspaceFolder}/env/dev.env"
    },
    {
      "name": "web-app Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd",
      "args": ["-entrypoint", "web-app"],
      "envFile": "${workspaceFolder}/env/dev.env",
      "env": {
        "WEB_APP_TEMPLATE_PATH": "${workspaceFolder}/internal/port/web-app/template",
        "WEB_APP_STATIC_PATH": "${workspaceFolder}/internal/port/web-app/static"
      }
    }
  ]
}
