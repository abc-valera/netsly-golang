{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "jsonApi Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "args": ["-entrypoint", "jsonApi"],
      "program": "${workspaceFolder}/cmd",
      "envFile": "${workspaceFolder}/env/.env.dev",
      "env": {
        "JSON-API_STATIC_PATH": "${workspaceFolder}/pkg/presentation/jsonApi/static"
      }
    },
    {
      "name": "webApp Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd",
      "args": ["-entrypoint", "webApp"],
      "envFile": "${workspaceFolder}/env/.env.dev",
      "env": {
        "WEB_APP_TEMPLATE_PATH": "${workspaceFolder}/pkg/presentation/webApp/template",
        "WEB_APP_STATIC_PATH": "${workspaceFolder}/pkg/presentation/webApp/static"
      }
    }
  ]
}
