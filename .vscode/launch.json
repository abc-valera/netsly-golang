  "version": "0.2.0",
  "configurations": [
    {
      "name": "json-rest-api Debug Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/json-rest-api",
      "envFile": "${workspaceFolder}/env/dev.env"
    },
    {
      "name": "web-app Debug Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/web-app",
      "envFile": "${workspaceFolder}/env/dev.env",
      "env": {
        "WEB_APP_TEMPLATE_PATH": "${workspaceFolder}/internal/port/web-app/template",
        "WEB_APP_STATIC_PATH": "${workspaceFolder}/internal/port/web-app/static"
      }
    }
  ]
}
