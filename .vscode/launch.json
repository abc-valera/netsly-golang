{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "json-api Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "args": ["-entrypoint", "json-api"],
      "program": "${workspaceFolder}/cmd",
      "envFile": "${workspaceFolder}/env/dev.env",
      "env": {
        "JSON-API_STATIC_PATH": "${workspaceFolder}/internal/presentation/json-api/static"
      }
    },
    {
      "name": "web-app Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd",
      "args": ["-entrypoint", "web-app"],
      "envFile": "${workspaceFolder}/env/dev.env",
      "env": {
        "WEB_APP_TEMPLATE_PATH": "${workspaceFolder}/internal/presentation/web-app/template",
        "WEB_APP_STATIC_PATH": "${workspaceFolder}/internal/presentation/web-app/static"
      }
    }
  ]
}
