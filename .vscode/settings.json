// Here the workspace settings are stored.
// Currently, it only activates the Revive linter using the config file from the project.
{
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  // Gofumpt formatter settings
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true,
    "ui.semanticTokens": true
  },

  // Revive linter settings
  "go.lintTool": "revive",
  "go.lintOnSave": "workspace",
  "go.lintFlags": ["-config", "./config/revive.toml"]
}
